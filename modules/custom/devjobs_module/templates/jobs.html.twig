<form  id="Search" type="get">
  <div class="text-grey-600 mx-auto -mt-8 grid w-5/6 grid-cols-1 justify-center text-center sm:grid-cols-3">
    <!-- mobile search -->
    <div class="relative rounded border-2 border-gray-200 bg-white dark:bg-gray-800 dark:border-gray-800 p-5 sm:hidden">
      <!-- filter button -->
      <svg xmlns="http://www.w3.org/2000/svg" class="absolute right-20 h-8 w-8 cursor-pointer hover:opacity-50 hover:fill-blue-600 dark:fill-white" viewBox="0 0 20 20" fill="gray">
        <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
      </svg>
      <!-- search button -->
      <svg class="absolute right-10 h-9 w-9 bg-blue-600 rounded text-white cursor-pointer hover:opacity-50" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
      </svg>
      <input type="text" id="job-name" name="title" placeholder="filter by title..." class="flex bg-transparent text-left dark:text-white" >
    </div>
    <div class="relative justify-around place-items-center hidden rounded border-2 border-gray-200 bg-white dark:bg-gray-800 dark:border-gray-800 p-5 sm:flex">
      <svg class="absolute left-0 ml-2 h-5 w-5" fill="blue" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
      </svg>
      <input type="text" name="title" placeholder="Filter by title..." class="text-center bg-transparent dark:text-white md:text-2xl" />
    </div>
    <div class="relative justify-around place-items-center hidden rounded border-2 border-gray-200 bg-white dark:bg-gray-800 dark:border-gray-800 p-5 sm:flex">
      <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-0 ml-2 h-5 w-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <input type="text" id="location" name="location" placeholder="Filter by location..." class="text-center bg-transparent pl-7 dark:text-white md:text-2xl" />
    </div>
    <div class="relative justify-around place-items-center hidden rounded border-2 border-gray-200 bg-white dark:bg-gray-800 dark:border-gray-800 p-5 sm:flex">
      <input id="checkbox" name="full_time" type="checkbox" value="checkbox" />
      <h4 class="mx-1 dark:text-white">Full time only</h4>
      <button class="cursor-pointer rounded-md bg-cyan-500 hover:bg-cyan-600 p-2 text-center font-bold">
        <input type="submit" value="Submit" name="submit"  />
      </button>
    </div>
  </div>
</form>

