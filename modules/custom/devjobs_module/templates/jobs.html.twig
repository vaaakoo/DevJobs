<div class="w-5/6 mt-26 mx-auto md:w-5/6">
<div class="dark:bg-darkgray bg-lightgrey font-kumbh-sans">
  <div class="grid gap-y-10 mx-auto place-items-center sm:grid-cols-2 md:grid-cols-3 md:gap-8 xl:grid-cols-3">
  {% for job in jobs %}

          <div class="relative bg-white dark:bg-darkgray1 rounded-t-sm h-228 w-340">
          <img src="{{ job.job_image }}" class="absolute top-0 left-0 mx-8 -translate-y-2/4 rounded-md h-50">
            <div class="grid grid-rows-2 gap-7 mx-7">
              <div class="grid grid-rows-3 mt-10 gap-y-2">
                <div class="text-gray-500 text-lg"><span>{{ job.work_time }} . {{ job.job_time }} {{ job.part_time }}</span></div>
                <div class="font-bold text-xl dark:text-white hover:text-bluegray dark:hover:text-bluegray cursor-pointer"><span>{{ job.job_type }}</span></div>
                <div class="text-gray-500 text-lg"><a href="/node/{{ job.id }}">{{ job.job_title }}</a></div>
              </div>
              <div class="text-sm font-bold text-bluemane">{{ job.job_country }}</div>
            </div>
          </div>

  {% endfor %}

  </div>
</div>
  <div class=" mt-20 mb-8 text-center">
    <button class="hover:bg-lightestblue rounded h-12 w-36 cursor-pointer bg-bluemane font-bold text-white">Load More</button>
  </div>

</div>




